If i = 1 Then
    ' Update the value of TextBox9 in the range A4:A5
    targetSheet.Range("A4:A5").Value = TextBox9.Value
    
    ' Copy the updated value of TextBox9 to cell H5 in the range A5:J5
    ThisWorkbook.Sheets("Sheet2").Range("H5").Value = TextBox9.Value
    
    ' Move to the next empty row
    lastRow = lastRow + 2
End If
