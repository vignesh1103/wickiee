Private Sub TextBox8_Change()
    Static firstInput As Boolean
    
    ' Check if it's the first input
    If Not firstInput Then
        ' Prompt the user if they are changing TextBox8
        Dim response As VbMsgBoxResult
        response = MsgBox("Are you changing TextBox8?", vbYesNo)
        
        If response = vbNo Then
            ' User chose not to change TextBox8, exit the subroutine
            Exit Sub
        End If
        
        firstInput = True
    End If
End Sub


Private Sub CommandButton3_Click()
    Dim logic As Integer
    
    ' Get user input for text boxes
    Dim textBox8Value As String
    Dim textBox2Value As String
    Dim textBox3Value As String
    Dim textBox4Value As String
    Dim textBox5Value As String
    Dim textBox23value As String
    Dim textBox24value As String
    
    ' Get current values of text boxes
    textBox8Value = TextBox8.Value
    textBox2Value = TextBox2.Value
    textBox3Value = TextBox3.Value
    textBox4Value = TextBox4.Value
    textBox5Value = TextBox5.Value
    textBox23value = TextBox23.Value
    textBox24value = TextBox24.Value
    
    ' Prompt the user to choose logic
    Dim response As VbMsgBoxResult
    response = MsgBox("Are you changing this Deliverable?", vbYesNo)
    
    If response = vbYes Then
        ' Apply logic 1 for 1st user input
        logic = 1
        ' Clear all text boxes except TextBox8
        ClearAllInputsExceptTextBox8
    Else
        ' Apply logic 2 for subsequent inputs
        logic = 2
        ' Clear all text boxes
        ClearAllInputs
    End If
    
    ' Call ManipulateAndPasteData subroutine with the chosen logic
    ManipulateAndPasteData textBox8Value, textBox2Value, textBox3Value, textBox4Value, textBox5Value, textBox23value, textBox24value, logic
End Sub
