Dim isFirstInput As Boolean
Dim isTextBox8Changed As Boolean

Sub Loader()
    ' Check if this is the first time user input
    If isFirstInput = False Or isTextBox8Changed = True Then
        ' Code for rows 48 and 49
        If PromptForDeliverableChange("TextBox8") = True Then
            ProcessRowRange ThisWorkbook.Sheets("Sheet2").Range("A48:J49")
            isFirstInput = True
            isTextBox8Changed = False
        End If
        Call ClearAllInputsExceptTextBox8
    Else
        ' Code for row 49 alone
        ProcessRowRange ThisWorkbook.Sheets("Sheet2").Range("A49:J49")
        Call ClearAllInputsExceptTextBox8
    End If
    
    MsgBox "Data has been manipulated and pasted to Sheet3.", vbInformation
End Sub

Function TextBox8_Changed() As Boolean
    ' Check if TextBox8 text has changed
    TextBox8_Changed = (TextBox8.Value <> "") ' Change "" to the initial value if available
End Function

Function PromptForDeliverableChange(deliverableName As String) As Boolean
    ' Prompt the user if the deliverable has changed
    Dim response As VbMsgBoxResult
    response = MsgBox("Are you sure you want to change the deliverable for " & deliverableName & "?", vbYesNo + vbQuestion, "Confirm Deliverable Change")
    If response = vbYes Then
        PromptForDeliverableChange = True
    Else
        PromptForDeliverableChange = False
    End If
End Function

Sub ProcessRowRange(rng As Range)
    Dim wsDestination As Worksheet
    Dim destinationRange As Range
    Dim lastRow As Long
    Dim i As Integer
    
    ' Set the destination worksheet (Sheet3) and starting cell
    Set wsDestination = ThisWorkbook.Sheets("Sheet3")
    lastRow = wsDestination.Cells(wsDestination.Rows.Count, "A").End(xlUp).Row ' Adjust to column A
    Set destinationRange = wsDestination.Range("A" & lastRow + 1) ' Start pasting from column A
    
    ' Copy the original data from Sheet2 to Sheet3
    rng.Copy destinationRange
    
    ' Loop through each row and manipulate and paste data based on user inputs
    For i = 1 To rng.Rows.Count
        ' Concatenate the values from TextBox8 and TextBox2
        destinationRange.Offset(i - 1, 2).Value = TextBox8.Value & " (" & TextBox2.Value & ")" ' Concatenate and replace in column C
        destinationRange.Offset(i - 1, 3).Value = TextBox3.Value ' Replace in column D
        destinationRange.Offset(i - 1, 10).Value = TextBox4.Value ' Replace in column K
        destinationRange.Offset(i - 1, 8).Value = TextBox5.Value ' Replace in column I
        destinationRange.Offset(i - 1, 7).Value = TextBox23.Value ' Replace in column H
        destinationRange.Offset(i - 1, 9).Value = TextBox24.Value ' Replace in column J
    Next i
End Sub

Sub ClearAllInputsExceptTextBox8()
    ' Clear all inputs except TextBox8
    TextBox2.Value = ""
    TextBox3.Value = ""
    TextBox4.Value = ""
    TextBox5.Value = ""
    TextBox23.Value = ""
    TextBox24.Value = ""
End Sub
