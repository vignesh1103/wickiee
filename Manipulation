Private Sub TextBox8_Change()
    Static firstInput As Boolean
    
    ' Check if it's the first input
    If Not firstInput Then
        firstInput = True
    ElseIf CommandButton3_Click_Finished Then
        ' Prompt the user if they are changing TextBox8
        TextBox8_Change_Response = MsgBox("Are you changing TextBox8?", vbYesNo)
        
        If TextBox8_Change_Response = vbNo Then
            ' User chose not to change TextBox8, exit the subroutine
            Exit Sub
        End If
    End If
End Sub

Dim CommandButton3_Click_Finished As Boolean

Private Sub CommandButton3_Click()
    ' Set the flag to true to indicate that CommandButton3 process is finished
    CommandButton3_Click_Finished = True
    
    ' Rest of your code here...
End Sub

