Dim Del_change As Boolean
Dim isFirstInstance As Boolean

Private Sub CommandButton8_Click()
    Dim response As VbMsgBoxResult
    
    response = MsgBox("Are you sure you want to change the deliverable?", vbYesNo)
    
    If response = vbYes Then
        Del_change = True
    Else
        Del_change = False
    End If
    
    Additional_Items
End Sub

Private Sub CommandButton3_Click()
    If isFirstInstance Then
        isFirstInstance = False
    End If
    
    Additional_Items
End Sub

Private Sub Additional_Items()
    Dim lastRow As Long
    
    If Del_change Then
        ' Clear all inputs and enable TextBox8
        ClearAllInputs
        TextBox8.Enabled = True
        ' Copy rows from sheet2 to sheet3 (two rows)
        lastRow = Sheets("Sheet3").Cells(Sheets("Sheet3").Rows.Count, "A").End(xlUp).Row + 1
        ' Copy the range and manipulate the data
        Sheets("Sheet2").Range("A48:K49").Copy
        With Sheets("Sheet3").Cells(lastRow, "A")
            .PasteSpecial Paste:=xlPasteValues
            ManipulateData .Row, TextBox8.Value, TextBox2.Value
        End With
    Else
        ' Clear all inputs except TextBox8 and disable TextBox8
        ClearAllInputsExceptTextBox8
        TextBox8.Enabled = False
        ' Copy rows from sheet2 to sheet3 (one row)
        lastRow = Sheets("Sheet3").Cells(Sheets("Sheet3").Rows.Count, "A").End(xlUp).Row + 1
        ' Copy the range and manipulate the data
        Sheets("Sheet2").Range("A49:K49").Copy
        With Sheets("Sheet3").Cells(lastRow, "A")
            .PasteSpecial Paste:=xlPasteValues
            ManipulateData .Row, TextBox8.Value, TextBox2.Value
        End With
    End If
End Sub

Private Sub ManipulateData(ByVal startRow As Long, ByVal value8 As String, ByVal value2 As String)
    With Sheets("Sheet3")
        ' Manipulate specific cells within the copied range
        .Cells(startRow, "C").Value = value8 & " (" & value2 & ")"
        .Cells(startRow, "D").Value = TextBox3.Value
        .Cells(startRow, "K").Value = TextBox4.Value
        .Cells(startRow, "I").Value = TextBox5.Value
        .Cells(startRow, "H").Value = TextBox23.Value
        .Cells(startRow, "J").Value = TextBox24.Value
    End With
End Sub

Private Sub ClearAllInputs()
    TextBox2.Value = ""
    TextBox3.Value = ""
    TextBox4.Value = ""
    TextBox5.Value = ""
    TextBox8.Value = ""
    TextBox23.Value = ""
    TextBox24.Value = ""
End Sub

Private Sub ClearAllInputsExceptTextBox8()
    TextBox2.Value = ""
    TextBox3.Value = ""
    TextBox4.Value = ""
    TextBox5.Value = ""
    TextBox23.Value = ""
    TextBox24.Value = ""
End Sub

Private Sub UserForm_Initialize()
    isFirstInstance = True
    Del_change = False ' Setting initial value of Del_change to False
End Sub
