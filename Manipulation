Private Sub CheckBox_CheckedChanged(sender As Object, e As EventArgs) Handles CheckBox1.CheckedChanged, CheckBox2.CheckedChanged, CheckBox3.CheckedChanged, CheckBox4.CheckedChanged, CheckBox5.CheckedChanged, CheckBox6.CheckedChanged, CheckBox7.CheckedChanged
    Dim checkBox As CheckBox = DirectCast(sender, CheckBox)

    Dim index As Integer = Convert.ToInt32(checkBox.Tag)

    If index >= 0 AndAlso index < TextBoxes.Length Then
        TextBoxes(index).Enabled = checkBox.Checked
        TextBoxes(index + 1).Enabled = checkBox.Checked
    End If
End Sub

' You need to set the Tag property of each checkbox to correspond to the index of the first associated textbox in the TextBoxes array.

Private TextBoxes() As TextBox = {TextBox9, TextBox11, TextBox13, TextBox15, TextBox17, TextBox19, TextBox21}
' For CheckBox1
CheckBox1.Tag = "9,10"

' For CheckBox2
CheckBox2.Tag = "11,12"

' For CheckBox3
CheckBox3.Tag = "13,14"

' For CheckBox4
CheckBox4.Tag = "15,16"

' For CheckBox5
CheckBox5.Tag = "17,18"

' For CheckBox6
CheckBox6.Tag = "19,20"

' For CheckBox7
CheckBox7.Tag = "21,22"
