Sub ProcessRowRange(rng As Range)
    Dim wsDestination As Worksheet
    Dim destinationRange As Range
    Dim lastRow As Long
    Dim startBValue As Long
    Dim tempBValue As Long
    Dim i As Integer
    
    ' Set the destination worksheet (Sheet3) and starting cell
    Set wsDestination = ThisWorkbook.Sheets("Sheet3")
    lastRow = wsDestination.Cells(wsDestination.Rows.Count, "A").End(xlUp).Row ' Adjust to column A
    
    ' Store the initial value of column B in a temporary variable
    If lastRow = 0 Then
        tempBValue = 40 ' If column B is empty, start from 40
    Else
        tempBValue = wsDestination.Cells(lastRow, "B").Value ' Store the last value in column B
    End If
    
    Set destinationRange = wsDestination.Cells(lastRow + 1, "A") ' Start pasting from next available row in column A
    
    ' Copy the original data from Sheet2 to Sheet3
    rng.Copy destinationRange
    
    ' Increment values in column B
    If lastRow = 0 Then
        startBValue = tempBValue ' If this is the first row pasted, use the initial value
    Else
        startBValue = tempBValue + rng.Rows.Count ' Otherwise, increment the last value by the number of rows pasted
    End If
    
    ' Update values in column B
    destinationRange.Resize(rng.Rows.Count, 1).Value = WorksheetFunction.Transpose(Evaluate("ROW(" & startBValue & ":" & startBValue + rng.Rows.Count - 1 & ")"))
    
    ' Update values in other columns
    For i = 1 To rng.Rows.Count
        destinationRange.Offset(i - 1, 2).Value = TextBox8.Value & " (" & TextBox2.Value & ")" ' Concatenate and replace in column C
        destinationRange.Offset(i - 1, 3).Value = TextBox3.Value ' Replace in column D
        destinationRange.Offset(i - 1, 10).Value = TextBox4.Value ' Replace in column K
        destinationRange.Offset(i - 1, 8).Value = TextBox5.Value ' Replace in column I
        destinationRange.Offset(i - 1, 7).Value = TextBox23.Value ' Replace in column H
        destinationRange.Offset(i - 1, 9).Value = TextBox24.Value ' Replace in column J
    Next i
End Sub
