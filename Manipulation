Dim isFirstInput As Boolean
Dim originalTextBox8Value As String

Sub Loader()
    If isFirstInput = False Then
        ProcessRowRange ThisWorkbook.Sheets("Sheet2").Range("A48:J49")
        isFirstInput = True
        originalTextBox8Value = TextBox8.Value ' Store the original value of TextBox8
        Call ClearAllInputsExceptTextBox8
    Else
        If TextBox8_Changed() Then
            If PromptForDeliverableChange() Then
                Call ClearAllInputs
                isFirstInput = False ' Reset isFirstInput to run code for rows 48 and 49 again
            Else
                ProcessRowRange ThisWorkbook.Sheets("Sheet2").Range("A49:J49")
                Call ClearAllInputsExceptTextBox8
            End If
        Else
            ProcessRowRange ThisWorkbook.Sheets("Sheet2").Range("A49:J49")
            Call ClearAllInputsExceptTextBox8
        End If
    End If
    
    MsgBox "Data has been manipulated and pasted to Sheet3.", vbInformation
End Sub

Function TextBox8_Changed() As Boolean
    ' Check if TextBox8 text has changed
    TextBox8_Changed = (TextBox8.Value <> originalTextBox8Value)
End Function

Function PromptForDeliverableChange() As Boolean
    ' Prompt the user if they want to change the deliverable
    Dim response As VbMsgBoxResult
    response = MsgBox("Are you sure you want to change the deliverable?", vbYesNo + vbQuestion, "Confirm Deliverable Change")
    If response = vbYes Then
        PromptForDeliverableChange = True
    Else
        PromptForDeliverableChange = False
    End If
End Function

Sub ProcessRowRange(rng As Range)
    ' Same as before
End Sub

Sub ClearAllInputsExceptTextBox8()
    ' Same as before
End Sub

Sub ClearAllInputs()
    ' Same as before
End Sub
