Sub Loader()
    Dim wsSource As Worksheet
    Dim wsDestination As Worksheet
    Dim sourceRange As Range
    Dim destinationRange As Range
    Dim lastRow As Long
    Dim i As Integer
    
    'Set the source worksheet (Sheet2) and range
    Set wsSource = ThisWorkbook.Sheets("Sheet2")
    Set sourceRange = wsSource.Range("A48:J49")
    
    'Set the destination worksheet (Sheet3) and starting cell
    Set wsDestination = ThisWorkbook.Sheets("Sheet3")
    lastRow = wsDestination.Cells(wsDestination.Rows.Count, "C").End(xlUp).Row
    Set destinationRange = wsDestination.Range("C" & lastRow + 1)
    
    'Copy the original data from Sheet2 to Sheet3
    sourceRange.Copy destinationRange
    
    'Loop through each row and manipulate and paste user data based on user inputs
    For i = 1 To 2 ' Assuming 2 rows need to be updated
        destinationRange.Offset(i - 1, 0).Value = destinationRange.Offset(i - 1, 0).Value & TextBox8.Value & TextBox2.Value 'Concatenate and replace in column C
        destinationRange.Offset(i - 1, 1).Value = TextBox3.Value 'Replace in column D
        destinationRange.Offset(i - 1, 7).Value = TextBox4.Value 'Replace in column K
        destinationRange.Offset(i - 1, 3).Value = TextBox5.Value 'Replace in column I
        destinationRange.Offset(i - 1, 2).Value = TextBoxe23.Value 'Replace in column H
        destinationRange.Offset(i - 1, 3).Value = TextBoxe24.Value 'Replace in column J
    Next i
    
    MsgBox "Data has been manipulated and pasted to Sheet3.", vbInformation
End Sub
