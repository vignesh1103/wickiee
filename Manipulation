Private Sub CheckBox_Click()
    Dim chkBox As CheckBox
    Dim rngTextBoxes As Range
    
    For Each chkBox In ActiveSheet.CheckBoxes
        If chkBox.Value = 1 Then
            Select Case chkBox.Name
                Case "CheckBox1"
                    EnableTextBoxes Range("B9:B10")
                Case "CheckBox2"
                    EnableTextBoxes Range("B11:B12")
                Case "CheckBox3"
                    EnableTextBoxes Range("B13:B14")
                Case "CheckBox4"
                    EnableTextBoxes Range("B15:B16")
                Case "CheckBox5"
                    EnableTextBoxes Range("B17:B18")
                Case "CheckBox6"
                    EnableTextBoxes Range("B19:B20")
                Case "CheckBox7"
                    EnableTextBoxes Range("B21:B22")
            End Select
        Else
            Select Case chkBox.Name
                Case "CheckBox1"
                    DisableTextBoxes Range("B9:B10")
                Case "CheckBox2"
                    DisableTextBoxes Range("B11:B12")
                Case "CheckBox3"
                    DisableTextBoxes Range("B13:B14")
                Case "CheckBox4"
                    DisableTextBoxes Range("B15:B16")
                Case "CheckBox5"
                    DisableTextBoxes Range("B17:B18")
                Case "CheckBox6"
                    DisableTextBoxes Range("B19:B20")
                Case "CheckBox7"
                    DisableTextBoxes Range("B21:B22")
            End Select
        End If
    Next chkBox
End Sub

Sub EnableTextBoxes(rng As Range)
    rng.Interior.Color = RGB(255, 255, 255) ' Enable textboxes
End Sub

Sub DisableTextBoxes(rng As Range)
    rng.Interior.Color = RGB(200, 200, 200) ' Disable textboxes
End Sub
