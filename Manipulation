Sub UpdateSheet3()
    ' Get the QG selection from cell
    Dim qgSelection As String
    qgSelection = ThisWorkbook.Sheets("Sheet1").Range("C14").Value ' Assuming the drop-down list is in Sheet1
    
    ' ranges for each QG in Sheet2
    Dim sourceRange As Range
    Select Case qgSelection
        Case "QGC0"
            Set sourceRange = ThisWorkbook.Sheets("Sheet2").Range("A3:J16") ' Change the range accordingly
        Case "QGC2"
            Set sourceRange = ThisWorkbook.Sheets("Sheet2").Range("A19:J28") ' Change the range accordingly
        Case "QGC4"
            Set sourceRange = ThisWorkbook.Sheets("Sheet2").Range("A31:J45") ' Change the range accordingly
        Case Else
            MsgBox "Invalid QGC selection.", vbExclamation
            Exit Sub
    End Select
    
    ' Determine the target range in Sheet3
    Dim targetSheet As Worksheet
    Dim targetRange As Range
    Set targetSheet = ThisWorkbook.Sheets("Sheet3")
    Set targetRange = targetSheet.Cells(targetSheet.Rows.Count, "A").End(xlUp).Offset(1, 0)
    
    ' Copy data from source range to target range
    If Not sourceRange Is Nothing Then
        ' Copy the entire source range
        sourceRange.Copy targetRange
    Else
        ' If source range is empty, display a message
        MsgBox "The selected QGC range is empty.", vbExclamation
    End If
    
    ' Optionally, you can clear any previous selections in Sheet3
    ' Uncomment the following line if needed
    ' ThisWorkbook.Sheets("Sheet3").Cells.ClearContents
End Sub
