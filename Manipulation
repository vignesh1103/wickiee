Private Sub CopyCheckBoxData(cb As CheckBox, rng As Variant, rowsToCopy As Long)
    ' Copy data from the specified range for the given checkbox
    If cb.Value = True Then
        If IsStringValue(rng) Then
            ' Handle string ranges
            ThisWorkbook.Sheets("Sheet2").Range(rng).Copy
        ElseIf IsNumericValue(rng) Then
            ' Handle numeric ranges
            ThisWorkbook.Sheets("Sheet2").Range(rng).Copy
        Else
            ' Handle other types of ranges (if needed)
        End If
        cb.Tag = rowsToCopy
    End If
End Sub

Function IsStringValue(value As Variant) As Boolean
    ' Check if the value is a string
    IsStringValue = VarType(value) = vbString
End Function

Function IsNumericValue(value As Variant) As Boolean
    ' Check if the value is numeric
    IsNumericValue = IsNumeric(value)
End Function
