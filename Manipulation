Sub ProcessRowRange(rng As Range)
    Dim wsDestination As Worksheet
    Dim destinationRange As Range
    Dim lastRow As Long
    Dim i As Integer
    Dim startBValue As Long
    
    ' Set the destination worksheet (Sheet3) and starting cell
    Set wsDestination = ThisWorkbook.Sheets("Sheet3")
    lastRow = wsDestination.Cells(wsDestination.Rows.Count, "A").End(xlUp).Row ' Adjust to column A
    
    ' Determine the starting value for column B
    If lastRow = 0 Then
        startBValue = 40 ' Start from 40 if no previous values in column B
    Else
        ' Get the last filled value in column B and increment by 1
        startBValue = wsDestination.Cells(lastRow, "B").Value + 1
    End If
    
    Set destinationRange = wsDestination.Cells(lastRow + 1, "A") ' Start pasting from next available row in column A
    
    ' Copy the original data from Sheet2 to Sheet3
    rng.Copy destinationRange
    
    ' Increment values in column B
    For i = 1 To rng.Rows.Count
        destinationRange.Offset(i - 1, 1).Value = startBValue + i - 1 ' Assuming B is the second column
    Next i
End Sub
