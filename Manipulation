Sub Loader()
    If isFirstUserInput Then
        isFirstUserInput = False ' Set flag to false after processing first user input
        Set rng = ThisWorkbook.Sheets("Sheet2").Range("A48:J49")
    Else
        If runRange48To49 Then
            Set rng = ThisWorkbook.Sheets("Sheet2").Range("A48:J49")
            runRange48To49 = False
        Else
            Set rng = ThisWorkbook.Sheets("Sheet2").Range("A49:J49")
        End If
    End If
    
    ' Increment values in column B based on the specified conditions
    IncrementColumnB rng
    
    ' Process the range and paste the data
    ProcessRowRange rng
    
    MsgBox "Work item added.", vbInformation
End Sub

Sub IncrementColumnB(rng As Range)
    Dim wsSource As Worksheet
    Dim cell As Range
    Dim incrementValue As Integer
    
    ' Set the source worksheet
    Set wsSource = ThisWorkbook.Sheets("Sheet2")
    
    ' Determine the increment value based on the conditions
    If runRange48To49 Then
        incrementValue = 1 ' Increment value for each row when runRange48To49 is true
    Else
        incrementValue = 2 ' Increment value only for the first row when runRange48To49 is false
    End If
    
    ' Loop through each cell in column B of the range
    For Each cell In rng.Columns(2).Cells
        ' Check if the cell is not empty
        If Not IsEmpty(cell.Value) Then
            ' Increment the value in column B based on the specified conditions
            cell.Value = cell.Value + incrementValue
            ' Update the corresponding cell in the source worksheet
            wsSource.Cells(cell.Row, "B").Value = cell.Value
        End If
    Next cell
End Sub
