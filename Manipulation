Private Sub CopyCheckBoxData(cb As CheckBox, rng As String, rowsToCopy As Long)
    ' Copy data from the specified range for the given checkbox
    If cb.Value = True Then
        ThisWorkbook.Sheets("Temp").Range("A1").Value = rowsToCopy ' Store the rowsToCopy value in a temporary cell
        ThisWorkbook.Sheets("Sheet2").Range(rng).Copy
        cb.Tag = ThisWorkbook.Sheets("Temp").Range("A1").Text ' Assign the rowsToCopy value as text to the Tag property
    End If
End Sub
