Private Sub CommandButton7_Click()
    If selectedCheckBox <> "" Then
        ' Perform actions based on the selected checkbox and qgc value
        Select Case selectedCheckBox
            Case "CheckBox1", "CheckBox5", "CheckBox6"
                ' Actions for checkboxes under QGC0
                Select Case qgc
                    Case "QGC0"
                        ' Example actions for QGC0 and CheckBox1, CheckBox5, CheckBox6
                        If selectedCheckBox = "CheckBox1" Then
                            ' Example: Copy data from Sheet2 to Sheet3 for CheckBox1 under QGC0
                            ThisWorkbook.Sheets("Sheet3").Range("A1").Value = ThisWorkbook.Sheets("Sheet2").Range("A1").Value
                        ElseIf selectedCheckBox = "CheckBox5" Then
                            ' Example: Hide a column for CheckBox5 under QGC0
                            ThisWorkbook.Sheets("Sheet1").Columns("C").Hidden = True
                        ElseIf selectedCheckBox = "CheckBox6" Then
                            ' Example: Insert a new row for CheckBox6 under QGC0
                            ThisWorkbook.Sheets("Sheet1").Rows("2:2").Insert Shift:=xlDown
                        End If
                        
                        ' Additional actions specific to QGC0 checkboxes can be added here
                        
                    Case "QGC2"
                        ' Handle actions specific to QGC2
                    Case "QGC4"
                        ' Handle actions specific to QGC4
                End Select
                
            Case "CheckBox2", "CheckBox3"
                ' Actions for checkboxes under QGC2
                ' Handle actions specific to QGC2 checkboxes
                
            Case "CheckBox4"
                ' Actions for checkboxes under QGC4
                ' Handle actions specific to QGC4 checkboxes
                
        End Select
    Else
        MsgBox "Please select a checkbox before clicking CommandButton7."
    End If
End Sub
